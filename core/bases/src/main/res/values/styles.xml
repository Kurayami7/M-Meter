<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Font Styles -->
    <style name="TextStyle">
        <item name="android:textDirection">locale</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Title Styles -->
    <style name="TextStyle.TitleLarge">
        <item name="android:textSize">@dimen/text_giant</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextStyle.TitleMedium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextStyle.TitleSmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Body Styles -->
    <style name="TextStyle.BodyLarge">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextStyle.BodyMedium">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextStyle.BodySmall">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Label Styles -->
    <style name="TextStyle.LabelLarge">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextStyle.LabelBody">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextStyle.LabelSmall">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Caption Style -->
    <style name="TextStyle.Caption">
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- View Divider Style -->
    <style name="ViewDividerStyle">
        <item name="android:radius">@dimen/radius_full</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigation">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/bottom_navigation_background</item>
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
        <item name="itemTextAppearanceActive">@style/TextStyle.TitleSmall.ItemTextAppearanceActive</item>
        <item name="itemTextAppearanceInactive">@style/TextStyle.TitleSmall.ItemTextAppearanceInactive</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Text Appearance for Bottom Navigation -->
    <style name="TextStyle.TitleSmall.ItemTextAppearanceActive">
        <item name="android:textColor">@color/background</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.TitleSmall.ItemTextAppearanceInactive">
        <item name="android:textColor">@color/background</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Bottom Navigation Active Indicator -->
    <style name="BottomNavigationActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_navigation_indicator</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="TextInputLayoutStyle">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButton" parent="@style/Widget.Material3.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textAppearance">@style/TextStyle.TitleSmall</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <style name="PrimaryButton.ReturnHomeButton" parent="@style/Widget.Material3.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextStyle.BodyMedium.TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:maxLines">1</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@drawable/button_retry</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="boxBackgroundColor">@drawable/button_retry</item>
        <!-- Ensuring hint color on TextInputLayout level -->
        <item name="hintTextColor">@color/black</item>
        <item name="helperTextTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>

    </style>

    <!-- Search Box Style -->
    <style name="TextStyle.BodyMedium.SearchBoxStyle">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">search</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">16sp</item>
    </style>

    <!-- Chip Styles -->
    <style name="TextStyle.BodySmall.ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStartPadding">@dimen/spacing_medium_16dp</item>
        <item name="chipEndPadding">@dimen/spacing_medium_16dp</item>
        <item name="chipBackgroundColor">@color/chip_background</item>

        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <!-- Additional Chip Styles -->
    <style name="AddToListChipStyle" parent="TextStyle.BodySmall.ChipStyle">
        <item name="android:textColor">@color/add_to_list_text_color</item>
    </style>

    <style name="DetailsChipStyle" parent="TextStyle.BodySmall.ChipStyle">
        <item name="android:textColor">@color/on_background_60</item>
        <item name="chipBackgroundColor">@color/background</item>
        <item name="strokeColor">@color/on_background_38</item>
    </style>

</resources>
